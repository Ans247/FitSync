<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.example.fitsync.LoginFrag"
        tools:layout="@layout/fragment_login"
        android:id="@+id/loginfrag"
        />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.example.fitsync.SignUpFrag"
        tools:layout="@layout/fragment_sign_up"
        android:id="@+id/signupfrag"
        />
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.example.fitsync.AdminLogin"
        tools:layout="@layout/fragment_admin_login"
        android:id="@+id/adminLogin"
        />
    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.example.fitsync.InitialFrag"
        tools:layout="@layout/fragment_admin_login"
        android:id="@+id/initialFrag"
        />
</LinearLayout>